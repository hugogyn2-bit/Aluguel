generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  TENANT
  OWNER
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String?
  passwordHash String

  role         Role     @default(TENANT)

  // ‚úÖ Trial (24h)
  trialEndsAt      DateTime?
  trialStartedAt   DateTime?

  // ‚úÖ Premium interno do app
  ownerPaid         Boolean   @default(false)
  premiumStartedAt  DateTime?

  // ‚úÖ Stripe
  stripeCustomerId       String?  @unique
  stripeSubscriptionId   String?  @unique
  stripePriceId          String?
  stripeStatus           String?
  currentPeriodEnd       DateTime?
  cancelAtPeriodEnd      Boolean  @default(false)

  // ‚úÖ Seguran√ßa extra (somente OWNER)
  birthDate    DateTime?

  // ‚úÖ CPF para reset e valida√ß√£o
  cpf          String? @unique

  // ‚úÖ TENANT troca senha no primeiro login
  mustChangePassword Boolean @default(false)

  // üîê Reset de senha por token
  resetPasswordToken   String?
  resetPasswordExpires DateTime?

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // ‚úÖ Se esse usu√°rio for TENANT, ter√° um perfil
  tenantProfile TenantProfile? @relation("TenantUser")

  // ‚úÖ Se esse usu√°rio for OWNER, poder√° ter v√°rios tenants vinculados
  ownedTenants  TenantProfile[] @relation("OwnerTenants")
}

model TenantProfile {
  id        String   @id @default(cuid())

  // üîó v√≠nculo com TENANT (User)
  userId    String   @unique
  user      User     @relation("TenantUser", fields: [userId], references: [id], onDelete: Cascade)

  // üîó v√≠nculo com OWNER (User) que criou o TENANT
  ownerId   String
  owner     User     @relation("OwnerTenants", fields: [ownerId], references: [id], onDelete: Cascade)

  // üßæ dados do inquilino
  fullName  String
  cpf       String   @unique
  rg        String
  phone     String   // ‚úÖ NOVO CAMPO
  address   String
  cep       String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([ownerId])
}
