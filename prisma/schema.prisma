generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  TENANT
  OWNER
}

enum ContractStatus {
  DRAFT
  PENDING_SIGNATURES
  ACTIVE
  CANCELLED
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String?
  passwordHash String

  role Role @default(TENANT)

  // ‚úÖ CPF + Nascimento (para reset de senha)
  cpf       String?   @unique
  birthDate DateTime?

  // ‚úÖ Trial (24h)
  trialEndsAt    DateTime?
  trialStartedAt DateTime?

  // ‚úÖ Premium interno do app
  ownerPaid        Boolean   @default(false)
  premiumStartedAt DateTime?

  // ‚úÖ Stripe
  stripeCustomerId     String?  @unique
  stripeSubscriptionId String?  @unique
  stripePriceId        String?
  stripeStatus         String?
  currentPeriodEnd     DateTime?
  cancelAtPeriodEnd    Boolean  @default(false)

  // ‚úÖ TENANT troca senha no primeiro login
  mustChangePassword Boolean @default(false)

  // üîê Reset de senha por token
  resetPasswordToken   String?
  resetPasswordExpires DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // ‚úÖ Se esse usu√°rio for TENANT, ter√° um perfil
  tenantProfile TenantProfile? @relation("TenantUser")

  // ‚úÖ Se esse usu√°rio for OWNER, poder√° ter v√°rios tenants vinculados
  ownedTenants TenantProfile[] @relation("OwnerTenants")

  // ‚úÖ Contratos que esse OWNER criou/assinou
  ownerContracts RentalContract[] @relation("OwnerContracts")
}

model TenantProfile {
  id String @id @default(cuid())

  // üîó v√≠nculo com TENANT (User)
  userId String @unique
  user   User   @relation("TenantUser", fields: [userId], references: [id], onDelete: Cascade)

  // üîó v√≠nculo com OWNER (User) que criou o TENANT
  ownerId String
  owner   User @relation("OwnerTenants", fields: [ownerId], references: [id], onDelete: Cascade)

  // üßæ dados do inquilino
  fullName  String
  cpf       String   @unique
  rg        String
  email     String
  phone     String

  address String
  cep     String
  city    String

  birthDate DateTime

  // üí∞ aluguel
  rentValueCents Int

  // ‚úÖ contrato gerado para esse inquilino
  contract RentalContract?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([ownerId])
}

model RentalContract {
  id String @id @default(cuid())

  tenantProfileId String @unique
  tenantProfile   TenantProfile @relation(fields: [tenantProfileId], references: [id], onDelete: Cascade)

  // ‚úÖ OWNER que gerou o contrato
  ownerId String
  owner   User @relation("OwnerContracts", fields: [ownerId], references: [id], onDelete: Cascade)

  status ContractStatus @default(DRAFT)

  // ‚úÖ Texto do contrato final j√° preenchido
  contractText String

  // ‚úÖ cidade sempre a mesma do cadastro e data do dia
  signedCity   String
  signedAtDate DateTime

  // ‚úÖ valor do aluguel no contrato
  rentValueCents Int

  // ‚úçÔ∏è assinatura do LOCADOR (OWNER)
  ownerSignatureDataUrl String?
  ownerSignedAt         DateTime?

  // ‚úçÔ∏è assinatura do LOCAT√ÅRIO (TENANT)
  tenantSignatureDataUrl String?
  tenantSignedAt         DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([ownerId])
}
