enum Role {
  TENANT
  OWNER
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String?
  passwordHash String
  role         Role     @default(TENANT)
  ownerPaid    Boolean  @default(false)
  trialEndsAt  DateTime?

  // ✅ se for TENANT, vai ter 1 perfil
  tenantProfile TenantProfile?

  // ✅ se for OWNER, pode ter vários tenants
  tenants TenantProfile[] @relation("OwnerTenants")

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model TenantProfile {
  id        String @id @default(cuid())

  fullName  String
  phone     String?

  // ✅ liga com o User TENANT (1-1)
  userId    String @unique
  user      User   @relation(fields: [userId], references: [id])

  // ✅ liga com o User OWNER (N-1)
  ownerId   String
  owner     User   @relation("OwnerTenants", fields: [ownerId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
