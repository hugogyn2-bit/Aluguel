generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  TENANT
  OWNER
}

enum ContractStatus {
  DRAFT
  OWNER_SIGNED
  TENANT_SIGNED
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String?
  passwordHash String

  role         Role     @default(TENANT)

  // âœ… Trial (24h)
  trialEndsAt      DateTime?
  trialStartedAt   DateTime?

  // âœ… Premium interno do app
  ownerPaid         Boolean   @default(false)
  premiumStartedAt  DateTime?

  // âœ… Stripe
  stripeCustomerId       String?  @unique
  stripeSubscriptionId   String?  @unique
  stripePriceId          String?
  stripeStatus           String?
  currentPeriodEnd       DateTime?
  cancelAtPeriodEnd      Boolean  @default(false)

  // âœ… dados extras
  birthDate    DateTime?
  cpf          String?   @unique

  // âœ… TENANT troca senha no primeiro login
  mustChangePassword Boolean @default(false)

  // ğŸ” Reset de senha por token
  resetPasswordToken   String?
  resetPasswordExpires DateTime?

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // âœ… Se esse usuÃ¡rio for TENANT, terÃ¡ um perfil
  tenantProfile TenantProfile? @relation("TenantUser")

  // âœ… Se esse usuÃ¡rio for OWNER, poderÃ¡ ter vÃ¡rios tenants vinculados
  ownedTenants  TenantProfile[] @relation("OwnerTenants")
}

model TenantProfile {
  id        String   @id @default(cuid())

  // ğŸ”— vÃ­nculo com TENANT (User)
  userId    String   @unique
  user      User     @relation("TenantUser", fields: [userId], references: [id], onDelete: Cascade)

  // ğŸ”— vÃ­nculo com OWNER (User) que criou o TENANT
  ownerId   String
  owner     User     @relation("OwnerTenants", fields: [ownerId], references: [id], onDelete: Cascade)

  // ğŸ§¾ dados do inquilino
  fullName  String
  cpf       String   @unique
  rg        String
  address   String
  cep       String
  city      String
  phone     String

  // ğŸ’° aluguel
  rentValueCents Int

  // ğŸ“„ contrato
  contracts RentalContract[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([ownerId])
}

model RentalContract {
  id String @id @default(cuid())

  tenantProfileId String
  tenantProfile   TenantProfile @relation(fields: [tenantProfileId], references: [id], onDelete: Cascade)

  ownerId String
  owner   User @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  status ContractStatus @default(DRAFT)

  // ğŸ“Œ dados do contrato
  contractText String
  signedCity   String
  signedAtDate DateTime

  // ğŸ’° valor
  rentValueCents Int

  // âœï¸ assinaturas (base64 PNG)
  ownerSignatureDataUrl  String?
  ownerSignedAt          DateTime?

  tenantSignatureDataUrl String?
  tenantSignedAt         DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([tenantProfileId])
  @@index([ownerId])
}
