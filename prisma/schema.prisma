generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  TENANT
  OWNER
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String?
  passwordHash String

  role         Role     @default(TENANT)

  // Premium
  ownerPaid    Boolean  @default(false)
  trialEndsAt  DateTime?

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // âœ… Se esse usuÃ¡rio for TENANT, terÃ¡ um perfil
  tenantProfile TenantProfile? @relation("TenantUser")

  // âœ… Se esse usuÃ¡rio for OWNER, poderÃ¡ ter vÃ¡rios tenants vinculados
  ownedTenants   TenantProfile[] @relation("OwnerTenants")
}

model TenantProfile {
  id        String   @id @default(cuid())

  // ðŸ”— vÃ­nculo com TENANT (User)
  userId    String   @unique
  user      User     @relation("TenantUser", fields: [userId], references: [id], onDelete: Cascade)

  // ðŸ”— vÃ­nculo com OWNER (User) que criou o TENANT
  ownerId   String
  owner     User     @relation("OwnerTenants", fields: [ownerId], references: [id], onDelete: Cascade)

  // ðŸ§¾ dados do inquilino
  fullName  String
  cpf       String   @unique
  rg        String
  address   String
  cep       String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([ownerId])
}
