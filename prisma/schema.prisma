enum Role {
  TENANT
  OWNER
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String?
  passwordHash String
  role         Role     @default(TENANT)

  // premium
  ownerPaid    Boolean  @default(false)
  trialEndsAt  DateTime?

  // v√≠nculo opcional: tenant pertence a um owner
  ownerId      String?
  owner        User?    @relation("OwnerTenants", fields: [ownerId], references: [id])
  tenants      User[]   @relation("OwnerTenants")

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
